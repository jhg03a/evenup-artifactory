<!-- Managed by puppet - do not modify -->

<Server port="8015" shutdown="SHUTDOWN">

    <Service name="Catalina">
        <% if scope['artifactory::http_port'] %>
        <Connector port="<%= scope['artifactory::http_port'] %>" protocol="HTTP/1.1"/>
        <% end %>

        <% if scope['artifactory::ajp_port'] %>
        <!-- This is the optional AJP connector -->
        <Connector port="<%= scope['artifactory::ajp_port'] %>" protocol="AJP/1.3"/>
        <% end %>

        <Engine name="Catalina" defaultHost="localhost">
            <Host name="localhost" appBase="webapps" startStopThreads="2"/>
        </Engine>

    </Service>
</Server>
